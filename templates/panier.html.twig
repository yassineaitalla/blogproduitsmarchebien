                                <td>{{ panier.getIdProduit().getNom() }} </td>
                                <td>{{ panier.quantite }}</td>
                                <td>{{ panier.total }}</td>
                               
                                
           

                            </tr>

                            

                            

                            
                            {% endfor %}
                        </tbody>

                       

                        <tr>
                            <td colspan="2" class="text-right"><strong>Total TTC:</strong></td>
                            <td class="text-right">{{ sommeTotal }} â‚¬</td>
                        </tr>

                        
                        
                        
                    </table>
                    

                 
                    
                {% if message is not empty %}
    <p>{{ message }}</p>
{% endif %}


{% if afficherPasserCommande %}
        <a  class="btn btn-primary">Passer commande</a>

        <a  class="btn btn-primary">Vider le panier</a>

        {% if afficherDevis %}
                    <a href="{{ path('demanderdevis') }}" class="btn btn-primary" style="margin-left: 250px;">Demander un devis</a>
                {% endif %}

                

    {% endif %}
                

                </div>
            </div>
        </div>
    </div>
  
</body>
</html>
