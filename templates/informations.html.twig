{% block body %}
    {% include 'navbar.html.twig' %} 
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Client Professionnel</title>
        <link rel="stylesheet" href="{{ asset('templates/style.css') }}">
    </head>

    <body class="bg-dark">
        <div class="container my-5">
            <div class="container bg-primary p-5 rounded">
                <h1 class="text-center text-light">Client Professionnel</h1>
                
                <form method="post" action="{{ path('recup_informations') }}">
                    <div class="mb-3">
                        <label for="nom" class="form-label text-light">Nom</label>
                        <input type="text" name="nom" class="form-control" id="nom" value="{{ client.nom }}" placeholder="Veuillez saisir votre nom" required>
                    </div>

                    <div class="mb-3">
                        <label for="prenom" class="form-label text-light">Prénom</label>
                        <input type="text" name="prenom" class="form-control" id="prenom" value="{{ client.prenom }}" placeholder="Veuillez saisir votre prénom" required>
                    </div>

                    <div class="mb-3">
                        <label for="telephone" class="form-label text-light">Téléphone</label>
                        <input type="text" name="telephone" class="form-control" id="telephone" value="{{ client.telephone }}" placeholder="Veuillez saisir votre téléphone" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label text-light">Email</label>
                        <input type="email" name="email" class="form-control" id="email" value="{{ client.email }}" placeholder="Veuillez saisir votre email" required>
                    </div>

                    <div class="mb-3">
                        <label for="motdepasse" class="form-label text-light">Mot de passe</label>
                        <input type="password" name="motdepasse" class="form-control" id="motdepasse" value="{{ client.motdepasse }}" placeholder="Veuillez saisir votre mot de passe" required>
                    </div>
                    
                    <div class="mb-3 text-end">
                        <button type="submit" class="btn btn-light">Enregistrer</button>
                    </div>
                </form>
            </div> 
        </div>

        <footer>
            {% include 'footer.html.twig' %} 
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-eEZUnKUVEMrZqDfFZzSQxlJvK1E21PJoQx9CK2qxBn3x4I5QVbFqCr7GJ3DdP3Z" crossorigin="anonymous"></script>
    </body>
</html>
{% endblock %}
